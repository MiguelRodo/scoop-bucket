{
    "version": "1.0.0",
    "description": "A tool to setup and manage multiple Git repositories",
    "homepage": "https://github.com/MiguelRodo/repos",
    "license": "MIT",
    "url": "https://github.com/MiguelRodo/repos/archive/refs/tags/v1.0.0.zip",
    "hash": "REPLACE_WITH_ACTUAL_HASH",
    "extract_dir": "repos-1.0.0",
    "bin": "bin\\repos.ps1",
    "depends": [
        "git",
        "jq"
    ],
    "checkver": {
        "github": "https://github.com/MiguelRodo/repos"
    },
    "autoupdate": {
        "url": "https://github.com/MiguelRodo/repos/archive/refs/tags/v$version.zip",
        "extract_dir": "repos-$version"
    },
    "notes": [
        "Run 'repos --help' to get started.",
        "Make sure you have Git for Windows installed (provides bash, git, and curl).",
        "Dependencies: git, jq (automatically installed via Scoop)"
    ]
}
